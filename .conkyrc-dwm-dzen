# BG	000000

# Other FGs	^fg(\#xxxxxx)
# red	ff535a
# blue	00b0d8
# green 5adb3c

TEXT
##################################
${execpi 1800 curl -s "http://weather.yahooapis.com/forecastrss?w=2375544&u=f" -o ~/.cache/weather.xml}
${execi 14400 ~/Scripts/update-check.sh}

^fg(\#ff535a)eDWN ${downspeed enp5s0}#
 ^fg()| ^fg(\#00b0d8)wDWN ${downspeed wlp3s0} @ ${wireless_essid wlp3s0}#
 ^fg()| ^fg(\#ff535a)RAM ${memperc}%#
 ^fg()| ^fg(\#00b0d8)CPU ${cpu}% (${acpitemp}'F)#
 ^fg()| ^fg(\#ff535a)Root ${fs_used_perc /}%#
 ^fg()| ^fg(\#00b0d8)Var ${fs_used_perc /var}%#
 ^fg()| ^fg(\#ff535a)Home ${fs_used_perc /home}%#
 ^fg()| ^fg(\#00b0d8)${execp cmus-remote -Q | grep "tag artist" | tail -c +12} : ${execi 60 cmus-remote -Q | grep "tag title" | tail -c +11}# 
 ^fg()| ^fg(\#ff535a)Vol ${execp cmus-remote -Q | tail -c 4}#
 ^fg()| ^fg(\#00b0d8)Bright ${execp xbacklight -get | head -c 3}# 
 ^fg()| ^fg(\#ff535a)Batt ${battery_percent}%#
 ^fg()| ^fg(\#00b0d8)${execp cat /tmp/off.updates | wc -l} Off ${execp cat /tmp/aur.updates | wc -l} AUR Updates#
 ^fg()| ${time %a %b %d %H:%M} (${execi 300 grep "yweather:condition" ~/.cache/weather.xml | grep -o "temp=\"[^\"]*\"" | grep -o "\"[^\"]*\"" | grep -o "[^\"]*"}'F)
