TEXT
##################################
${execpi 1800 curl -s "http://weather.yahooapis.com/forecastrss?w=2375544&u=f" -o ~/.cache/weather.xml}
${execpi 14400 checkupdate > /tmp/off.updates}
${execi 7200 ~/Scripts/aur-update-check.sh}

^fg()^fg(\#00b0d8)${execp cmus-remote -Q | grep "tag artist" | tail -c +12} : ${execi 60 cmus-remote -Q | grep "tag title" | tail -c +11}# 
 ^fg()| ^fg(\#ff535a)eDWN ${downspeed enp3s0}#
 ^fg()| ^fg(\#00b0d8)CPU (${acpitemp}'C) ${cpu cpu1}% ${cpu cpu2}% RAM ${memperc}%#
 ^fg()| ^fg(\#ff535a)Boot ${fs_used_perc /boot}% (${fs_used /boot}) Root ${fs_used_perc /}% (${fs_used /})#
 ^fg()| ^fg(\#00b0d8)${execp cat /tmp/off.updates | wc -l} Off ${execp cat /tmp/aur.updates | wc -l} AUR Updates#
 ^fg()| ^fg(\#ff535a)${time %a %b %d %H:%M} (${execi 300 grep "yweather:condition" ~/.cache/weather.xml | grep -o "temp=\"[^\"]*\"" | grep -o "\"[^\"]*\"" | grep -o "[^\"]*"}'F)

